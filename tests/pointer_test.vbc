int main() {
    int a = 10;
    int* p = null;

    write(STDOUT, "--- Initial values ---\n");
    write(STDOUT, "Value of a: ");
    write(STDOUT, (string)a);
    write(STDOUT, "\n");
    write(STDOUT, "Value of p: ");
    write(STDOUT, p);
    write(STDOUT, "\n");

    // --- Test 1: Address-of operator (&) ---
    p = &a;
    write(STDOUT, "\n--- After p = &a ---\n");
    write(STDOUT, "Value of p: ");
    write(STDOUT, p);
    write(STDOUT, "\n");

    // --- Test 2: Dereference operator (*) for reading ---
    int b = *p;
    write(STDOUT, "\n--- After b = *p ---\n");
    write(STDOUT, "Value of b: ");
    write(STDOUT, b);
    write(STDOUT, "\n");

    // --- Test 3: Dereference operator (*) for writing ---
    *p = 20;
    write(STDOUT, "\n--- After *p = 20 ---\n");
    write(STDOUT, "Value of a: ");
    write(STDOUT, a);
    write(STDOUT, "\n");
    write(STDOUT, "Value of *p: ");
    write(STDOUT, *p);
    write(STDOUT, "\n");

    return 0;
}

main();
